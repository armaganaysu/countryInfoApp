<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.CountryFragment">

   <ImageView
       android:id="@+id/countryImage"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
      android:layout_alignParentTop="true"
      android:scaleType="fitCenter"
      android:minHeight="200dp"></ImageView>

   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:id="@+id/countryName"
      android:layout_below="@id/countryImage"
       android:layout_centerHorizontal="true"
       android:layout_margin="7dp"
       android:textSize="20sp"
       android:textStyle="bold"
      android:text="Country Name"></TextView>

   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:id="@+id/countryCapital"
       android:layout_below="@id/countryName"
       android:layout_centerHorizontal="true"
       android:layout_margin="7dp"
       android:textSize="20sp"
       android:textStyle="bold"
       android:text="Country Capital"></TextView>

   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:id="@+id/countryRegion"
       android:layout_below="@id/countryCapital"
       android:layout_centerHorizontal="true"
       android:layout_margin="7dp"
       android:textSize="20sp"
       android:textStyle="bold"
       android:text="Country Region"></TextView>

   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:id="@+id/countryCurrency"
       android:layout_below="@id/countryRegion"
       android:layout_centerHorizontal="true"
       android:layout_margin="7dp"
       android:textSize="20sp"
       android:textStyle="bold"
       android:text="Country Currency"></TextView>

   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:id="@+id/countryLanguage"
       android:layout_below="@id/countryCurrency"
       android:layout_centerHorizontal="true"
       android:layout_margin="7dp"
       android:textSize="20sp"
       android:textStyle="bold"
       android:text="Country Language"></TextView>

   </RelativeLayout>
</layout>